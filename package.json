{
  "name": "codebase-restify",
  "version": "1.0.0",
  "description": "A back end project template using Restify as a Node.js framework.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha \"test/**/*_test.js\" --timeout=10000 --exit",
    "cover": "nyc _mocha \"test/**/*_test.js\" --timeout=10000 --recursive --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasimy-as/Codebase-Restify.git"
  },
  "author": "Hasimy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hasimy-as/Codebase-Restify/issues"
  },
  "homepage": "https://github.com/hasimy-as/Codebase-Restify#readme",
  "dependencies": {
    "chai": "^4.2.0",
    "confidence": "^5.0.0",
    "hippie": "^0.6.1",
    "joi": "^17.3.0",
    "mocha": "^8.2.1",
    "mongodb": "^3.6.3",
    "restify": "^8.5.1",
    "restify-cors-middleware": "^1.1.1",
    "sinon": "^9.2.2",
    "uuid": "^3.4.0",
    "validate.js": "^0.13.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "istanbul": "^0.4.5",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0"
  },
  "nyc": {
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "check-coverage": true,
    "reporter": [
      "html",
      "text",
      "lcov",
      "text-summary"
    ],
    "all": true,
    "cache": true,
    "report-dir": "./coverage"
  }
}
